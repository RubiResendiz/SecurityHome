<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgTipoVisitaCard"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/_83234" />

        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreVisitaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#252323"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/txtDireccionVisitaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/correo_electr_nico"
                android:textColor="#434040"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtIdVisitaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#676464" />

            <TextView
                android:id="@+id/txtFechaVisitaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#636363"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>